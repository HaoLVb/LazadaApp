<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/dimen_10"
    tools:context="vn.edu.hust.lazadaapp.view.dangnhap.dangky.DangKyFragment">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dimen_10"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cần điền tất cả các mục"
                android:textColor="@color/black" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/nameLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_15"
                app:errorTextAppearance="@style/MyAppTheme.TextInputLayout"
                app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout">

                <vn.edu.hust.lazadaapp.customview.ClearEditText
                    android:id="@+id/nameEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Họ tên đầy đủ"
                    android:textColor="@color/black"
                    android:textColorHint="@color/colorGray"
                    android:textCursorDrawable="@null"
                    android:textSize="16sp"
                    android:theme="@style/EditTextStyle" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/emailLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_15"
                app:errorTextAppearance="@style/MyAppTheme.TextInputLayout"
                app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout">

                <vn.edu.hust.lazadaapp.customview.ClearEditText
                    android:id="@+id/emailEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Địa chỉ email"
                    android:textColor="@color/black"
                    android:textColorHint="@color/colorGray"
                    android:textCursorDrawable="@null"
                    android:textSize="16sp"
                    android:theme="@style/EditTextStyle" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/passLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10"
                app:errorTextAppearance="@style/MyAppTheme.TextInputLayout"
                app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout"
                app:passwordToggleEnabled="true">

                <EditText
                    android:id="@+id/passEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Mật khẩu"
                    android:inputType="textPassword"
                    android:textColor="@color/black"
                    android:textColorHint="@color/colorGray"
                    android:textCursorDrawable="@null"
                    android:textSize="16sp"
                    android:theme="@style/EditTextStyle" />

            </android.support.design.widget.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10"
                android:text="Mật khẩu phải bao gồm ít nhất 6 ký tự và 1 chữ hoa."
                android:textColor="@color/colorGray" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/repeatLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10"
                app:errorTextAppearance="@style/MyAppTheme.TextInputLayout"
                app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout"
                app:passwordToggleEnabled="true">

                <EditText
                    android:id="@+id/repeatEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nhập lại mật khẩu"
                    android:inputType="textPassword"
                    android:textColor="@color/black"
                    android:textColorHint="@color/colorGray"
                    android:textCursorDrawable="@null"
                    android:textSize="16sp"
                    android:theme="@style/EditTextStyle" />

            </android.support.design.widget.TextInputLayout>

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/mSwitch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10"
                android:layout_weight="1"
                android:text="Tôi muốn nhận các khuyến mãi dộc quyền qua email."
                android:textColor="@color/black"
                android:textSize="14sp"
                android:theme="@style/SwitchStyle" />


            <Button
                android:id="@+id/registerButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_15"
                android:background="@color/bgLogo"
                android:text="Đăng ký"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10"
                android:text="Tôi đã đọc và hiểu rõ các điều khoản bảo mật của Lazada"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10"
                android:gravity="center"
                android:text="Hoặc đăng ký bằng"
                android:textColor="@color/black" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/fbButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dimen_10"
                    android:layout_weight="1"
                    android:background="@drawable/background_facebook"
                    android:drawableLeft="@drawable/facebookiconsmall"
                    android:text="Facebook"
                    android:textAllCaps="false"
                    android:textColor="@color/colorFacebook" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_weight="1"
                    android:background="@drawable/background_google"
                    android:drawableLeft="@drawable/googleplussmall"
                    android:text="Google"
                    android:textAllCaps="false"
                    android:textColor="@color/colorGoogle" />

            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>


</FrameLayout>
